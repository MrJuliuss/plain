{{!< default}}
<main>
    <article class="{{post_class}}">
        {{#post}}
            <header>
                <h1>{{{title}}}</h1>
                <h5>
                    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD/MM/YYYY"}}</time>
                </h5>
                {{#foreach tags}}
                    <span class="label label-primary"><a href="{{url}}"><i class="fa fa-tag"></i> {{name}}</a></span>
                {{/foreach}}
            </header>

            <section class="posts">
                {{content}}

                <hr />
                <div class="social-buttons">
                    <a href="https://twitter.com/?status={{encode title}} {{url absolute="true"}}" title="Share On Twitter" target="_blank" class="btn btn-default btn-sm">Twitter</a>
                    <a href="https://facebook.com/sharer/sharer.php?u={{url absolute="true"}}" title="Share On Facebook" target="_blank" class="btn btn-primary btn-sm">Facebook</a>
                    <a href="https://plus.google.com/share?url={{url absolute="true"}}" title="Share On Google+" target="_blank" class="btn btn-success btn-sm">Google+</a>
                    <a href="https://stumbleupon.com/submit?url={{url absolute="true"}}" title="Share On StumbleUpon" target="_blank" class="btn btn-info btn-sm">Stumbleupon</a>
                    <a href="https://linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}&source={{@blog.title}}" title="Share On LinkedIn" target="_blank" class="btn btn-warning btn-sm">LinkedIn</a>
                    <a href="https://reddit.com/submit?url={{url absolute="true"}}&title={{encode title}}" title="Share On Reddit" target="_blank" class="btn btn-danger btn-sm">Reddit</a>
                </div>
            </section>
        {{/post}}

        <!-- Disqus -->
        <div id="disqus_thread"></div>

        <script type="text/javascript">
        var disqus_shortname = 'example';
        var disqus_identifier = '{{post.id}}';
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </article>
</main>
